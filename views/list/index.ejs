<!DOCTYPE html>
<html>
  <head>
    <title><%= client.user.username %> Listing - Find your server here!</title>
    <link rel="icon" href="https://cdn.discordapp.com/avatars/<%= client.user.id %>/<%= client.user.avatar %>.png?size=4096">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/list.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    
<meta property="og:type" content="website">
<meta property="og:site_name" content="URLCORD.CF">
<meta property="og:title" content="URLCORD.CF Listing - Find your server here!">
<meta property="og:description" content="Make your own custom invite link with URLCORD.CF discord bot">
<meta name="theme-color" content="#05eeff">
  </head>
  <body class="listing">
    
<nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="/"><%= client.user.username %></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/list/server">Servers</a>
      </li>  
      <li class="nav-item">
        <a class="nav-link" href="/invite">Add Your Server</a>
      </li>      
      <% if (req.user) { %> 
      <li class="nav-item">
        <a class="nav-link" href="/dashboard">Dashboard</a>
      </li>            
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>            
      <li class="nav-item">
        <a class="nav-link" href="/profile">Profile</a>
      </li>            
      <% } else { %>
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
      </li>      
      <% } %>
    </ul>
  </div>
</nav> 
    
    <div class="sc-box">
      <div class="search">
				<form class="search-form">
					<input class="sc-input" type="text" placeholder="Search existing code" name="search" required>
					<input type="submit" value="Submit">
				</form>
			</div>      
    </div>
    
    
    <% if (sc) { %>
<div class="card-columns">
  <% items.map(data => { %>
  <% if (!data.guild.name) return; %>
  
  <div class="card" onclick="document.location='/list/server/<%= data.guild.id %>'">
    <% if (!data.guild.icon) { %>
    <img src="https://www.online-tech-tips.com/wp-content/uploads/2019/09/discord.jpg.optimal.jpg" class="card-img-top guild-icon" alt="guild icon">
    <% } else { %>
    <img src="<%= data.guild.icon %>" class="card-img-top" alt="...">
    <% } %>
    <div class="card-body">
      <h5 class="card-title"><%= data.guild.name %></h5>
      <p class="card-text"><%= data.description.length > 100 ? data.description.substring(0, 50) + "..." : data.description; %></p>
    </div>
    <div class="card-footer">
      <small class="text-muted">ğŸ‘ <%= data.used %></small>
    </div>
  </div>
  
  <% }) %>
</div>    
    <p align="center"> 
      <button class="btn btn-primary view-all" onclick="document.location='/list/server/all'">View other server</button>
    </p>    
    <% } else if (!sc) { %>
<div class="card-columns">
  <% items.slice(0, 12).sort((a, b) => b.used - a.used).map(data => { %>
  <% let guild = client.guilds.cache.get(data.guild.id); %>
  <% if (!guild || !data.guild.name) return; %>
  
  <div class="card" onclick="document.location='/list/server/<%= guild.id %>'">
    <% if (!guild.iconURL()) { %>
    <img src="https://www.online-tech-tips.com/wp-content/uploads/2019/09/discord.jpg.optimal.jpg" class="card-img-top guild-icon" alt="guild icon">
    <% } else { %>
    <img src="<%= guild.iconURL() %>" class="card-img-top" alt="...">
    <% } %>
    <div class="card-body">
      <h5 class="card-title"><%= guild.name %> <span class="badge badge-warning">ğŸ‘ï¸ <%= data.used %></span></h5>
      <p class="card-text"><%= data.description.length > 100 ? data.description.substring(0, 50) + "..." : data.description; %></p>
    </div>
  </div>
  
  <% }) %>
</div>    
    <p align="center"> 
      <button class="btn btn-primary view-all" onclick="document.location='/list/server/all'">View All</button>
    </p>    
    <script>
    alert(`You already setup your server but not in this list ? try to type url refresh !`)
    </script>
    <% } %>
   
    
  </body>
</html>